<Project Sdk="Microsoft.Build.Sql/0.1.12-preview">
  <PropertyGroup>
    <Name>Database</Name>
    <DSP>Microsoft.Data.Tools.Schema.Sql.Sql160DatabaseSchemaProvider</DSP>
    <ModelCollation>1033, CI</ModelCollation>
    <TargetDatabaseSet>True</TargetDatabaseSet>
    <SqlTargetName>Database</SqlTargetName>
  </PropertyGroup>
  <ItemGroup>
  <PostDeploy Include="PostDeployment.sql" />
  
  <SqlCmdVariable Include="APP_DB_USER">
    <DefaultValue>pfm_user</DefaultValue>
    <Value>$(SqlCmdVar__1)</Value>
  </SqlCmdVariable>
  <SqlCmdVariable Include="APP_DB_PASSWORD">
    <DefaultValue>ChangeMe123!</DefaultValue>
    <Value>$(SqlCmdVar__2)</Value>
  </SqlCmdVariable>
  <SqlCmdVariable Include="DB_NAME">
    <DefaultValue>PersonalFinanceManager</DefaultValue>
    <Value>$(SqlCmdVar__3)</Value>
  </SqlCmdVariable>
</ItemGroup>
</Project>