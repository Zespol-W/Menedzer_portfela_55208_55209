<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body bg-secondary text-light">
            <h1 class="text-center mb-3 text-light">Dodaj Nową Kategorię</h1>
            
            <%# Upewnij się, że router obsługuje dokładnie tę ścieżkę metodą POST %>
            <form action="/categories/add" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nazwa Kategorii</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="form-control"
                        placeholder="np. Jedzenie, Transport, Rozrywka"
                        value="<%= typeof name !== 'undefined' ? name : '' %>"
                        required
                    />
                </div>
                
                <div class="mb-3">
                    <label for="color" class="form-label">Kolor</label>
                    <div class="d-flex align-items-center">
                        <input
                            type="color"
                            id="color"
                            name="color"
                            class="form-control form-control-color me-3"
                            value="<%= typeof color !== 'undefined' ? color : '#007bff' %>"
                            title="Wybierz kolor kategorii"
                        />
                        <small class="text-light-50">Ten kolor będzie widoczny przy transakcjach.</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Opis (opcjonalnie)</label>
                    <textarea
                        id="description"
                        name="description"
                        class="form-control"
                        rows="3"
                        placeholder="Krótki opis kategorii"
                    ><%= typeof description !== 'undefined' ? description : '' %></textarea>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Dodaj Kategorię</button>
                    <a href="/categories" class="btn btn-outline-light">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>