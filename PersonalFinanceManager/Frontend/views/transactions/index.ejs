<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center text-light">
        <h1>Transakcje dla konta: <%= account ? account.name : 'Nieznane' %></h1>
        <a href="/accounts" class="btn btn-outline-light">Powrót do kont</a>
    </div>
    <hr class="text-light">

    <div class="d-flex justify-content-end mb-3">
        <a href="/accounts/<%= account.id || account.Id %>/transactions/add" class="btn btn-success">Dodaj Nową Transakcję</a>
    </div>

    <% if (transactions && transactions.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Kategoria</th>
                    <th scope="col">Opis</th>
                    <th scope="col" class="text-end">Kwota</th>
                    <th scope="col">Typ</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                <tr>
                    <td><%= transaction.formattedDate %></td>
                    <td><%= transaction.categoryName || 'Brak' %></td>
                    <td><%= transaction.name || transaction.description || 'Brak opisu' %></td>
                    <td class="text-end fw-bold">
                        <% 
                           // Bezpieczne parsowanie kwoty
                           let amt = parseFloat(transaction.amount || transaction.Amount || 0);
                        %>
                        <%= amt.toFixed(2) %> <%= account.currencyCode || account.currency %>
                    </td>
                    <td>
                        <% if (amt < 0) { %>
                            <span class="badge border border-secondary text-secondary">Wydatek</span>
                        <% } else { %>
                            <span class="badge border border-light text-light">Przychód</span>
                        <% } %>
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <% 
                               // Definiujemy ID raz, żeby nie było pomyłek
                               const tId = transaction.id || transaction.Id;
                               const aId = account.id || account.Id;
                            %>
                            
                            <a href="/accounts/<%= aId %>/transactions/edit/<%= tId %>" class="btn btn-outline-primary">
                                Edytuj
                            </a>

                            <form action="/accounts/<%= aId %>/transactions/delete/<%= tId %>" method="POST" style="display:inline;" onsubmit="return confirm('Czy na pewno chcesz usunąć tę transakcję?')">
                                <button type="submit" class="btn btn-outline-danger">Usuń</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="alert alert-info bg-dark text-info border-info">Brak transakcji dla tego konta.</div>
    <% } %>
</div>