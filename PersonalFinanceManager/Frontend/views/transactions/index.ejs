<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center text-light">
        <h1>Transakcje dla konta: <%= account ? account.name : 'Nieznane' %></h1>
        <a href="/accounts" class="btn btn-outline-light">Powrót do kont</a>
    </div>
    <hr class="text-light">

    <div class="d-flex justify-content-end mb-3">
    <a href="/accounts/<%= account.id %>/transactions/add" class="btn btn-success">Dodaj Nową Transakcję</a>
</div>

    <% if (transactions && transactions.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Data</th>
                    <th scope="col">Kategoria</th>
                    <th scope="col">Opis</th>
                    <th scope="col">Kwota</th>
                    <th scope="col">Typ</th>
                    <th scope="col">Akcje</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                <tr>
                    <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                    <td><%= transaction.categoryName || transaction.category || 'Brak' %></td>
                    <td><%= transaction.description || 'Brak opisu' %></td>
                    <td class="<%= transaction.type === 'expense' || transaction.type === 1 ? 'text-danger' : 'text-success' %>">
                        <%= (transaction.type === 'expense' || transaction.type === 1) ? '-' : '+' %> <%= Number(transaction.amount).toFixed(2) %>
                    </td>
                    <td>
                        <span class="badge <%= transaction.type === 'expense' || transaction.type === 1 ? 'bg-danger' : 'bg-success' %>">
                            <%= transaction.type === 'expense' || transaction.type === 1 ? 'Wydatek' : 'Przychód' %>
                        </span>
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="/accounts/<%= account.id %>/transactions/edit/<%= transaction.id %>" class="btn btn-primary">Edytuj</a>
                            <form action="/accounts/<%= account.id %>/transactions/delete/<%= transaction.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Czy na pewno chcesz usunąć tę transakcję?')">
                                <button type="submit" class="btn btn-danger">Usuń</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="alert alert-info">Brak transakcji dla tego konta.</div>
    <% } %>
</div>